<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/labelId_RowProd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[ID]"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/labelName_RowProd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelName_RowProd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[NAME]"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/labelType_RowProd"
        app:layout_constraintStart_toEndOf="@+id/labelId_RowProd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelType_RowProd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[TYPE]"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/labelPrice_RowProd"
        app:layout_constraintStart_toEndOf="@+id/labelName_RowProd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelPrice_RowProd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[PRICE]"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelType_RowProd"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>